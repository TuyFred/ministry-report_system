# Production Environment Variables for cPanel
# IMPORTANT: Update these values with your actual cPanel credentials

# Database Configuration (cPanel MySQL)
DB_DIALECT=mysql
DB_NAME=your_cpanel_username_report
DB_USER=your_cpanel_username_dbuser
DB_PASS=your_database_password
DB_HOST=localhost
DB_PORT=3306

# Server Configuration
PORT=5000
NODE_ENV=production

# JWT Secret (Generate a strong random string)
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production

# Admin Secret Key (Generate a strong random string)
ADMIN_SECRET_KEY=your_admin_secret_key_here_change_this_in_production

# Client URL (Your frontend domain)
CLIENT_URL=https://report.gnitafrica.com

# Upload Directory (Absolute path on cPanel)
UPLOAD_DIR=/home/your_cpanel_username/ministry-backend/uploads

# Optional: Email Configuration (if using email features)
# EMAIL_HOST=mail.gnitafrica.com
# EMAIL_PORT=587
# EMAIL_USER=noreply@gnitafrica.com
# EMAIL_PASS=your_email_password
# EMAIL_FROM=Ministry Report System <noreply@gnitafrica.com>
